{% from "macros.njk" import navigation %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Dev Vault</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/blog-sections.css">
</head>
<body>
    <nav>
        <div class="nav-container">
            <a href="/" class="nav-brand">Dev Vault</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/tools/">Tools</a></li>
                <li><a href="/bookmarks/">Bookmarks</a></li>
                <li><a href="/runbooks/" class="active">Run Books</a></li>
            </ul>
        </div>
    </nav>

    <main>
        <div class="container">
            <div class="blog-content">
                <h1 style="font-size: 2.2rem; font-weight: 600; color: #1e293b; margin-bottom: 2.5rem; padding-bottom: 1rem; border-bottom: 1px solid #e5e7eb; position: relative;">
                    {{ title }}
                    <span style="position: absolute; bottom: -1px; left: 0; width: 60px; height: 3px; background: #2563eb;"></span>
                </h1>
                {{ content | safe }}
            </div>
        </div>
    </main>
</body>
</html>
